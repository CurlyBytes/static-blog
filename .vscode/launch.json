{
    "version": "0.2.0",
    "configurations": [{
            "name": "Listen for XDebug",
            "type": "php",
            "request": "launch",
            "port": 9000,
            "log": true,
            "externalConsole": false,
            "pathMappings": {
                "/application/public": "${workspaceRoot}/public",
                "/application/src": "${workspaceRoot}/src"
            },
            "ignore": [
               
                "**/bin/*",
                "**/docs/*",
                "**/blog/*"
            ]
        },
    ]
}